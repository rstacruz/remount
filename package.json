{
  "name": "remount",
  "description": "Mount React components to the DOM using custom elements",
  "version": "0.11.0",
  "author": "Rico Sta. Cruz <rstacruz@users.noreply.github.com>",
  "type": "module",
  "source": "src/index.js",
  "exports": {
    "require": "./dist/remount.cjs",
    "default": "./dist/remount.modern.js",
    "es5": "./dist/remount.cjs"
  },
  "main": "dist/remount.js",
  "module": "dist/remount.module.js",
  "unpkg": "dist/remount.umd.js",
  "bugs": {
    "url": "https://github.com/rstacruz/remount/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/puppeteer": "^5.4.5",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.5.1",
    "expect-puppeteer": "6.1.0",
    "gh-pages": "^3.2.3",
    "jest": "^27.5.1",
    "microbundle": "^0.14.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "puppeteer": "^13.5.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "start-server-and-test": "^1.14.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.3"
  },
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "files": [
    "index.js",
    "dist",
    "es5.js"
  ],
  "homepage": "https://github.com/rstacruz/remount#readme",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/browser_test/",
      "/dist/"
    ]
  },
  "keywords": [
    "custom element",
    "mount",
    "onmount",
    "react",
    "web component"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">= 15.0.0",
    "react-dom": ">= 15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rstacruz/remount.git"
  },
  "scripts": {
    "build": "microbundle",
    "prettier": "prettier '*.js' 'src/**/*.{js,ts}'",
    "lint": "tslint --project .",
    "deploy": "gh-pages -d . -s 'dist/**/*'",
    "tsc": "tsc",
    "jest": "jest",
    "prepare": "run-s build",
    "test": "start-server-and-test watch http://127.0.0.1:10049/ jest",
    "watch": "microbundle watch"
  },
  "dependencies": {
    "react-shadow-dom-retarget-events": "^1.1.0"
  }
}
