{
  "name": "remount",
  "description": "Mount React components to the DOM using custom elements",
  "version": "0.11.0",
  "author": "Rico Sta. Cruz <rstacruz@users.noreply.github.com>",
  "type": "module",
  "source": "src/index.js",
  "exports": {
    "require": "./dist/remount.cjs",
    "default": "./dist/remount.modern.js",
    "es5": "./dist/remount.cjs"
  },
  "main": "dist/remount.js",
  "module": "dist/remount.module.js",
  "unpkg": "dist/remount.umd.js",
  "bugs": {
    "url": "https://github.com/rstacruz/remount/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "babel-core": "^7.0.0-bridge.0",
    "gh-pages": "^3.2.3",
    "happy-dom": "^2.55.0",
    "microbundle": "^0.14.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-shadow-dom-retarget-events": "^1.1.0",
    "serve": "^13.0.2",
    "start-server-and-test": "^1.14.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.3",
    "vitest": "^0.9.0"
  },
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "files": [
    "index.js",
    "dist",
    "es5.js"
  ],
  "homepage": "https://github.com/rstacruz/remount#readme",
  "keywords": [
    "custom element",
    "mount",
    "onmount",
    "react",
    "web component"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">= 15.0.0",
    "react-dom": ">= 15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rstacruz/remount.git"
  },
  "scripts": {
    "build": "microbundle --name Remount --globals react=React,react-dom=ReactDOM",
    "prettier": "prettier '*.js' '{src,test}/**/*.{js,ts}'",
    "lint": "tslint --project .",
    "deploy": "gh-pages -d . -s 'dist/**/*'",
    "tsc": "tsc",
    "prepare": "run-s build",
    "test": "vitest",
    "dev:watch": "yarn build --watch",
    "dev:serve": "serve -l 10049",
    "dev": "run-p -sl dev:watch dev:serve"
  }
}
